[color]
	ui = auto
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
[core]
	excludesfile = ~/.gitignore
	editor = vim
[alias]
	a = add
	ap = add -p
	co = checkout
	pco = !git checkout `git branch | peco`
	cb = checkout -b
	ci = commit
	ca = commit -a
	cam = commit -a --amend
	sh = show
	st = status
	ss = status -s
	ssb = status --short --branch
	b = branch
	ba = branch -a
	bd = branch -d
	bD = branch -D
	bvv = branch -vv
	pbd = !git branch -d `git branch | peco`
	pbD = !git branch -D `git branch | peco`
	l = log
	ls = log --stat
	lo = log --oneline
	lp = log -p
	lns = log --name-status
	lno = log --name-only
	lg = log --graph --decorate --oneline
	cp = cherry-pick
	cpx = cherry-pick -x
	df = diff
	dw = diff --color-words
	dc = diff --cached
	d1 = diff HEAD~1
	d2 = diff HEAD~2
	d3 = diff HEAD~3
	d4 = diff HEAD~4
	d5 = diff HEAD~5
	pdf = !git diff `git status -s | sed -e 's/^...//' | peco`
	pr = pull --rebase
	pu = push -u
	patch = diff --no-prefix
	current-branch = rev-parse --abbrev-ref HEAD
	nothing = reset --hard HEAD
	f = fetch
	fp = fetch --prune
	w = whatchanged
	rb = rebase
	re = reset
